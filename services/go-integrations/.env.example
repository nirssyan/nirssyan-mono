# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# App Store Connect Webhooks
APPSTORE_WEBHOOK_SECRET=your-hmac-secret
APPSTORE_TELEGRAM_BOT_TOKEN=your-bot-token
APPSTORE_TELEGRAM_CHAT_ID=-1001234567890
APPSTORE_TELEGRAM_THREAD_ID=123

# Sentry Webhooks
SENTRY_TELEGRAM_BOT_TOKEN=your-bot-token
SENTRY_TELEGRAM_CHAT_ID=-1001234567890
SENTRY_TELEGRAM_THREAD_ID=123

# GlitchTip Webhooks (uses same Telegram config as Sentry)
# Uses SENTRY_TELEGRAM_* variables

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=makefeed-integrations
OTEL_EXPORTER_ENDPOINT=tempo.infrastructure.svc.cluster.local:4317
OTEL_ENVIRONMENT=production

# Prometheus Metrics
METRICS_PORT=9464
