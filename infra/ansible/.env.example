# User Environment Variables
# Copy this file to .env and customize for your environment
# Your .env file will NEVER be overwritten by Ansible playbooks

# ============================================================
# Infra Node Setup (setup-infra-node.yml)
# ============================================================

# SSH connection
INFRA_SSH_HOST=203.0.113.10
INFRA_SSH_USER=root
INFRA_SSH_KEY=~/.ssh/id_rsa

# Infrastructure domains
INFRA_DOMAIN=infra.example.com
ACME_EMAIL=admin@example.com

# MetalLB load balancer
METALLB_IP_RANGE=192.168.1.240-192.168.1.250

# Docker Hub credentials (for private registry mirror)
DOCKER_HUB_USERNAME=your-dockerhub-username
DOCKER_HUB_TOKEN=dckr_pat_YOUR_TOKEN_HERE

# ============================================================
# Apps Node Setup (setup-apps-node.yml)
# ============================================================

# SSH connection
APPS_SSH_HOST=203.0.113.11
APPS_SSH_USER=root
APPS_SSH_KEY=~/.ssh/id_rsa

# Product name (for node labels and taints)
PRODUCT_NAME=my-product

# ============================================================
# Project Creation (create-project.yml)
# ============================================================

# Project configuration
PROJECT_NAME=my-project
PROD_DOMAIN=my-project.com
DEV_DOMAIN=dev.my-project.com

# ============================================================
# Generated Credentials (READ-ONLY)
# ============================================================
# The following files are AUTO-GENERATED by Ansible playbooks:
#   - .env.infra.generated  (from setup-infra-node.yml)
#   - .env.apps.generated   (from setup-apps-node.yml)
