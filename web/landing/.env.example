# Landing page environment variables
# Copy to .env.local and fill in values

# Backend API
NEXT_PUBLIC_API_BASE_URL=https://dev.api.infatium.ru

# App Store IDs (used as fallback if tracker URLs not set)
NEXT_PUBLIC_APP_STORE_ID=6749490917
NEXT_PUBLIC_PLAY_STORE_ID=com.nirssyan.makefeed

# AppMetrica tracker URLs for install attribution
# Create trackers at https://appmetrica.yandex.com -> Tracking -> Add tracker
# These override App Store/RuStore direct links with tracked redirects
NEXT_PUBLIC_APPMETRICA_IOS_TRACKER_URL=
NEXT_PUBLIC_APPMETRICA_ANDROID_TRACKER_URL=

# Matomo analytics
NEXT_PUBLIC_MATOMO_URL=
NEXT_PUBLIC_MATOMO_SITE_ID=
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Yandex Metrika
NEXT_PUBLIC_YANDEX_METRIKA_ID=
NEXT_PUBLIC_ENABLE_YANDEX_METRIKA=true

# Server-side API key
API_KEY=
